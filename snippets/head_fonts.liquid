{% capture type_head %} {{ settings.typography_headings | lstrip | rstrip | replace: ' ', '+' | replace: "'", '' }} {% endcapture %}
{% capture type_menu %} {{ settings.typography_menus | lstrip | rstrip | replace: ' ', '+' | replace: "'", '' }} {% endcapture %}
{% capture type_body %} {{ settings.typography_body | lstrip | rstrip | replace: ' ', '+' | replace: "'", '' }} {% endcapture %}
{% capture type_quote %} {{ settings.typography_quote | lstrip | rstrip | replace: ' ', '+' | replace: "'", '' }} {% endcapture %}

{% unless type_head contains 'regular' %}
	<link href="//fonts.googleapis.com/css?family={{ type_head | replace: ',+serif', '' | replace: ',+sans-serif', '' | replace: ',+cursive', '' | replace: ' ', '' }}:400,400italic,500,600,700,700italic" rel="stylesheet" type="text/css">
{% endunless %}

{% unless type_menu contains 'regular' or type_menu == type_head %}
	<link href="//fonts.googleapis.com/css?family={{ type_menu | replace: ',+serif', '' | replace: ',+sans-serif', '' | replace: ',+cursive', '' | replace: ' ', '' }}:400,500,700" rel="stylesheet" type="text/css">
{% endunless %}

{% unless type_body contains 'regular' or type_body == type_head or type_body == type_menu %}
	<link href="//fonts.googleapis.com/css?family={{ type_body | replace: ',+serif', '' | replace: ',+sans-serif', '' | replace: ',+cursive', '' | replace: ' ', '' }}:400,400italic,500,600,700,700italic" rel="stylesheet" type="text/css">
{% endunless %}

{% unless quote contains 'regular' or type_quote == type_head or type_quote == type_menu or type_quote == type_body %}
	<link href="//fonts.googleapis.com/css?family={{ type_quote | replace: ',+serif', '' | replace: ',+sans-serif', '' | replace: ',+cursive', '' | replace: ' ', '' }}:400,400italic,500,600,700,700italic" rel="stylesheet" type="text/css">
{% endunless %}